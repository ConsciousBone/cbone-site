---
import LinkButton from '../components/LinkButton.astro';
import '../styles/global.css';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Home</title>
	</head>
	<body class="min-h-screen flex flex-col items-center">
		<div class="
			flex-1 w-full flex items-center justify-center
		">
			<div class="
			flex-1 w-full flex items-center justify-center
			w-full max-w-md rounded-2xl
			bg-white/60 dark:bg-black/50 backdrop-blur-xl
			border border-white/20 dark:border-black/20
			text-gray-800 dark:text-gray-300 shadow-xl
			p-10 flex flex-col items-center text-center
			">
				<h1 class="text-4xl title-font">Socials</h1>
				<h2 class="title-font">See what I'm doing currently!</h2>
				<div class="flex flex-wrap justify-center gap-2 pt-4">
					<LinkButton href="/projects">YouTube</LinkButton>
					<LinkButton href="/socials">Twitch</LinkButton>
					<LinkButton href="/about">TikTok</LinkButton>
				</div>
        <div class="flex flex-wrap justify-center gap-2 pt-4">
					<LinkButton href="/projects">Reddit</LinkButton>
					<LinkButton href="/socials">Instagram</LinkButton>
					<LinkButton href="/about">X</LinkButton>
				</div>
        <div class="flex flex-wrap justify-center gap-2 pt-4">
					<LinkButton href="/projects">GitHub</LinkButton>
					<LinkButton href="/socials">Discord</LinkButton>
					<LinkButton href="/about">Ivy</LinkButton>
				</div>
			</div>
		</div>
		<div class="pb-2">
			<p class="text-xs text-gray-500 text-center">
				Background image from
				<a class="underline hover:text-gray-400" href="https://unsplash.com/photos/a-blurry-image-of-a-blue-and-pink-background-XgeZu2jBaVI">
					Unsplash.
				</a>
			</p>
			<p class="text-xs text-gray-500 text-center">
				This website is
				<a class="underline hover:text-gray-400" href="https://github.com/consciousbone/cbone-site">
					open source!
				</a>
			</p>
		</div>
	</body>
</html>
